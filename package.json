  "dependencies": {
    "axios": "^1.7.9",
    "dotenv": "^16.4.7",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@types/dotenv": "^6.1.1",
    "@types/node": "^25.0.3",
    "@types/node-telegram-bot-api": "^0.64.13",
    "nodemon": "^3.1.11",
    "pkg": "^5.8.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "pkg": {
    "assets": [
      "node_modules/axios/dist/node/axios.cjs"
    ]
